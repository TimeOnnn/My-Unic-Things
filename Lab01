using System;

namespace Study.Labs.Lab01
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Proga1();
            Proga2();
        }
        private static void Proga1()
        {
            string maxWordLenght = WordLength("Вводите слова, завершите exit");
            if (maxWordLenght == "");
            else
                Console.WriteLine("Cамое длинное слово: {0}", maxWordLenght.ToUpper());
        }
        private static string WordLength(string message)
        {
            string word;
            int maxLenght = 0;
            string maxLenghtWord = "";
            Console.WriteLine(message);
            do
            {
                word = Console.ReadLine();
                if (word.ToLower() == "exit")
                    break;
                if (word.Length > maxLenght)
                {
                    maxLenght = word.Length;
                    maxLenghtWord = word + ' ' + '(' + maxLenght.ToString() + ')';
                }
            }
            while (true);
            return maxLenghtWord;
        }
        private static void Proga2()
        {
            string gameOver = Game("Попробуй угадать!");
            Console.WriteLine(gameOver);
        }
        private static string Game(string message)
        {
            double score = 0, wins = 0;
            int answer;
            Random random = new Random();
            Console.WriteLine(message);
            do
            {
                Console.Write("Введите число: ");
                string strAnswer = Console.ReadLine();
                if (!(int.TryParse(strAnswer, out answer)))
                {
                    Console.WriteLine("Введены неверные данные");
                    break;
                }
                int pcAnswer = new Random().Next(2);
                if (answer == pcAnswer)
                {
                    wins += 1;
                    Console.WriteLine("Угадали!");
                }
                else
                    Console.WriteLine("Попробуйте снова...");
                if (answer == 0.0 || answer == 1.0)
                    score += 1;
            }
            while (!(answer > 1));
            return GameScoreCount(wins, score);
        }
        private static string GameScoreCount(double wins, double score)
        {
            double percent = (wins / score * 100);
            string result = ("Игра окончена со счётом " + wins + ", угадано " + Math.Round(percent, 1) + "% бросков.");
            return result;
        }
    }
}
